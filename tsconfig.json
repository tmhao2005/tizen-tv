{
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react",
    "strict": false,
    "module": "CommonJS",
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false
  },
  "include": [
    "types/globals.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
